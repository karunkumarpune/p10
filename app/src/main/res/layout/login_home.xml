<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/lgoinhome_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:layout_alignParentBottom="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_2"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dp_40">
            <Button
                android:id="@+id/btn_fb_loginhome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login With Facebook"
                android:textColor="@color/white"
                android:background="@color/fb_blue"
                android:padding="@dimen/dp_15"
                android:textAllCaps="false"
                android:textAlignment="center"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_40">
            <Button
                android:id="@+id/btn_email_loginhome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Login With Email ID"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="@color/colorPrimary"
                android:padding="@dimen/dp_15"
                android:textAlignment="center"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_signup_loginhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_newuser_loginhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User?"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/dp_15"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_signup_loginhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign up Here"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/dp_15"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>