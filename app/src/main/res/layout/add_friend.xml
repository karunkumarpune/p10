<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_sw1_addfrnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_friends"
        android:textSize="@dimen/sp_17"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:padding="@dimen/dp_15"
        android:drawableLeft="@mipmap/back"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/dp_20">
        <LinearLayout
            android:id="@+id/ll_mail_addfrnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/iv_mail_addfrnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/email_select"
                android:padding="@dimen/dp_25"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fb_addfrnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40">
            <ImageView
                android:id="@+id/iv_fb_addfrnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/facebook_select"
                android:padding="@dimen/dp_25"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_search_addfrnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search"/>
        <EditText
            android:id="@+id/et_seach_addfrnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_15"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:hint="@string/search"/>
        <ImageView
            android:id="@+id/iv_cancle_addfrnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="@color/view_color"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>
    <Button
        android:id="@+id/btn_search_addfrnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:background="@color/colorPrimary"
        android:layout_gravity="right"
        android:minHeight="0dp"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_serachlist_addfrnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"></android.support.v7.widget.RecyclerView>


        <ImageView
            android:id="@+id/iv_next_addfrnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/create_grp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>