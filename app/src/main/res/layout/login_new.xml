<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_login_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_35"
            android:background="@mipmap/logo"/>
        <TextView
            android:id="@+id/tv_sw1_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="-5dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@email.com"
            android:textSize="@dimen/sp_15"

            android:backgroundTint="@color/edittext_baseline"
            android:inputType="textEmailAddress"/>
        <TextView
            android:id="@+id/tv_sw2_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginBottom="-5dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="*****"
            android:backgroundTint="@color/edittext_baseline"
            android:textSize="@dimen/sp_15"
            android:maxLength="20"
            android:inputType="textPassword"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_16">
                <TextView
                    android:id="@+id/tv_sign_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/dp_15"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_fb_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Login with Facebook"
                    android:textColor="@color/white"
                    android:background="@color/fb_blue"
                    android:textSize="@dimen/sp_15"
                    android:padding="@dimen/dp_15"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_signup_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tv_new_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New User? "
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_signup_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Sign up Here"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>