<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_back_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/close"
                    android:tint="@color/black"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_save_detail"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/save"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10">
                <app.com.perfec10.util.CircleImageView
                    android:id="@+id/civ_self_detail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10">
                    <TextView
                        android:id="@+id/tv_name_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_datetime_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="@dimen/sp_13"
                        android:layout_marginTop="@dimen/dp_2"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_caption_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:textStyle="bold"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_snapname_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/tv_snapdetail_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_pt1_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dp_5">
                            <TextView
                                android:id="@+id/tv_sw1_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bust"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/black"/>
                            <TextView
                                android:id="@+id/tv_sw2_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Waist"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_pt2_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dp_5">
                            <TextView
                                android:id="@+id/tv_sw3_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Waist"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/black"/>
                            <TextView
                                android:id="@+id/tv_sw4_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hips"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_10">
                        <TextView
                            android:id="@+id/tv_pt3_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dp_5">
                            <TextView
                                android:id="@+id/tv_sw5_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Legs"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/black"/>
                            <TextView
                                android:id="@+id/tv_sw6_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Body"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginTop="@dimen/dp_10">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.8"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_pt4_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dp_5">
                            <TextView
                                android:id="@+id/tv_sw7_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Body"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/black"/>
                            <TextView
                                android:id="@+id/tv_sw8_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Waist"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_scoretype_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1.4"
                        android:background="@mipmap/other_score">
                        <TextView
                            android:id="@+id/tv_score_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/sp_30"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.8"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_pt5_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dp_5">

                            <TextView
                                android:id="@+id/tv_sw9_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Shoulder"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/black" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/black"/>
                            <TextView
                                android:id="@+id/tv_sw10_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hips"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_viewtype_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_sc1_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc2_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc3_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc4_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc5_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc6_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc7_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc8_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc9_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
                <ImageView
                    android:id="@+id/iv_sc10_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/star_outline"
                    android:layout_margin="@dimen/dp_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_like_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" "/>
                <TextView
                    android:id="@+id/tv_comment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_like_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_like_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/like"/>
                    <TextView
                        android:id="@+id/tv_sw11_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:layout_marginLeft="@dimen/dp_5"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_comment_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/comment"/>
                    <TextView
                        android:id="@+id/tv_sw12_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:layout_marginLeft="@dimen/dp_5"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_share_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_snap_share" />
                    <TextView
                        android:id="@+id/tv_sw13_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:layout_marginLeft="@dimen/dp_5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#dee58b"
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5">
                <LinearLayout
                    android:id="@+id/ll_comm1_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <app.com.perfec10.util.CircleImageView
                        android:id="@+id/civ_frndpic_detail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="@dimen/dp_10"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_comname_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:id="@+id/tv_comm_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_comm2_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_8">
                    <app.com.perfec10.util.CircleImageView
                        android:id="@+id/civ_frndpic2_detail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="@dimen/dp_10"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_comname2_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:id="@+id/tv_comm2_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_addcomm_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_5">
                    <app.com.perfec10.util.CircleImageView
                        android:id="@+id/civ_userpic_detail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="@dimen/dp_10"/>

                    <TextView
                        android:id="@+id/et_comm_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="  Write a Comment"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_5"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAG A PERSON"
                    android:layout_weight="1" />
                <EditText
                    android:id="@+id/tv_tagged_eddetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fndlist_eddetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"/>

            <LinearLayout
                android:id="@+id/ll_location_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOCATION"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_location_eddetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="taged" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"/>

            <LinearLayout
                android:id="@+id/ll_age_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AGE"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_age_eddetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="taged"
                    android:drawableRight="@mipmap/drop_down" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_age_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />

            <LinearLayout
                android:id="@+id/ll_height_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HEIGHT"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_height_eddetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="taged"
                    android:drawableRight="@mipmap/drop_down"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_height_stats"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />

            <LinearLayout
                android:id="@+id/ll_weight_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_weight_eddetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="taged"
                    android:drawableRight="@mipmap/drop_down"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_weight_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RACE"
                    android:layout_weight="1" />
                <EditText
                    android:id="@+id/tv_race_eddetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"/>
            <TextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:text="ADD A NOTE"/>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/rectangle"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10">
                <EditText
                    android:id="@+id/et_addnote_eddetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>