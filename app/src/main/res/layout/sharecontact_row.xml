<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:gravity="center_vertical">
        <app.com.perfec10.helper.RoundedImageView
            android:id="@+id/riv_sharecon_row"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            app:riv_corner_radius="@dimen/dp_10"
            app:riv_oval="false"
            app:riv_border_color="@color/view_color"
            app:riv_border_width="@dimen/dp_1"/>
        <TextView
            android:id="@+id/tv_name_sharecon_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/iv_check_sharecon_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/unselect"/>
    </LinearLayout>
    <View
        android:id="@+id/view_sharecon_row"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/view_color"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>
</LinearLayout>