<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_sw1_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inputs"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:textAlignment="center" />
    <ImageView
        android:id="@+id/iv_back_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"
        android:layout_margin="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tv_sw1_input"
        android:layout_above="@+id/ll_below_input"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@color/colorAccent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/linearLayout"
                android:layout_toStartOf="@+id/linearLayout"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_20">
                <ImageView
                    android:id="@+id/iv_show_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_show_input1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:scaleType="centerInside"
                android:layout_marginTop="@dimen/dp_20"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:id="@+id/linearLayout"
                android:visibility="invisible">
                <ImageView
                    android:id="@+id/iv_zoomin_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/zoom_in"
                    android:layout_marginBottom="@dimen/dp_5"/>
                <ImageView
                    android:id="@+id/iv_zoomout_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/zoom_out"
                    android:layout_marginBottom="@dimen/dp_5"/>
                <ImageView
                    android:id="@+id/iv_crop_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/crop" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:gravity="center_vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_margin="@dimen/dp_5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/picture"
                    android:layout_marginRight="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/tv_sw2_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PICTURE"
                    android:textColor="@color/black"
                    android:gravity="center_vertical" />
            </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:elevation="@dimen/dp_2">
                    <TextView
                        android:id="@+id/tv_mine_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="It's Mine"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp_5"/>
                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:elevation="@dimen/dp_2">
                <TextView
                    android:id="@+id/tv_notmine_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Not Mine"
                    android:textColor="@color/black"
                    android:padding="@dimen/dp_5"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center"
                android:layout_margin="@dimen/dp_5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/gender"
                        android:layout_marginRight="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/tv_sw3_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GENDER"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:elevation="@dimen/dp_2">
                    <TextView
                        android:id="@+id/tv_female_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Female"
                       android:textAlignment="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp_5"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:elevation="@dimen/dp_2">
                    <TextView
                        android:id="@+id/tv_male_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp_5"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center"
                android:layout_margin="@dimen/dp_5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/angle"
                        android:layout_marginRight="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/tv_sw4_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ANGLE"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:elevation="@dimen/dp_2">
                    <TextView
                        android:id="@+id/tv_front_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Front"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp_5"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:elevation="@dimen/dp_2">
                    <TextView
                        android:id="@+id/tv_back_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp_5"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_below_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/tv_measure_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:text="MEASURE"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/dp_15"/>
    </LinearLayout>
</RelativeLayout>