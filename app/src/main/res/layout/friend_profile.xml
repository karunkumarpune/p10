<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                android:background="@color/colorPrimary">
                <ImageView
                    android:id="@+id/iv_back_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/back"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_delete_frnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/delete"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_back_oth_pro"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220">
                <ImageView
                    android:id="@+id/iv_backimg_oth_pro"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_220"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:id="@+id/ll_back_oth_pro"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_220"
                    android:orientation="vertical"
                    android:background="#80000000">




                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:civ_border_width="3dp"
                        app:civ_border_color="#ffffff"
                        android:id="@+id/civ_oth_pro"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_gravity="center"
                        android:src="@mipmap/user"
                        android:layout_marginTop="@dimen/dp_25"/>


                        <TextView
                            android:id="@+id/tv_namehead_oth_pro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginTop="@dimen/dp_15"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_20"
                            android:layout_gravity="center_horizontal" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_4"
                android:background="@color/colorPrimary"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:layout_marginTop="-30dp"
                android:elevation="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@color/colorPrimary">
                    <LinearLayout
                        android:id="@+id/ll_posts_profile"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_sw1_oth_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posts"
                            android:textSize="@dimen/sp_20"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tv_postno_oth_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/sp_20"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"/>
                    <LinearLayout
                        android:id="@+id/ll_frndtop_oth_pro"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_sw2_oth_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Friends"
                            android:textSize="@dimen/sp_20"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tv_frndno_oth_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/sp_20"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_sw4_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_email_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="#aaaaaa"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/view_color"/>
                <TextView
                    android:id="@+id/tv_sw9_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_name_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="#aaaaaa"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/view_color"/>
                <TextView
                    android:id="@+id/tv_sw5_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_location_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="#aaaaaa"/>
                <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"/>
                <TextView
                    android:id="@+id/tv_sw8_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_age_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="#aaaaaa"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/view_color"/>
                <TextView
                    android:id="@+id/tv_sw6_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_gender_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="#aaaaaa"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/view_color"/>
                <TextView
                    android:id="@+id/tv_sw7_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Race"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_race_oth_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="#aaaaaa"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/view_color"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>