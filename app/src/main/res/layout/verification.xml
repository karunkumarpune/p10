<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="OTP"
            android:textStyle="bold"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:padding="@dimen/dp_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:text="Please enter OTP received on your registered email Id"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:padding="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textAlignment="center"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_sw1_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter OTP"
                android:layout_marginTop="@dimen/dp_40"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_marginBottom="-5dp"/>
            <EditText
                android:id="@+id/et_otp_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="XXXXX"
                android:textSize="@dimen/sp_15"
                android:inputType="number"/>
            <TextView
                android:id="@+id/tv_resend_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="right"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_15"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:id="@+id/tv_send_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/dp_15"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_changeclick_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:id="@+id/tv_sw2_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_17"
                    android:text="Change "/>
                <TextView
                    android:id="@+id/tv_sw3_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_17"
                    android:text="Email Address"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_changelayout_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <EditText
                    android:id="@+id/et_change_verfiy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email Id"/>
                <Button
                    android:id="@+id/btn_change_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send change"
                    android:background="@color/diff_blue"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>