<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_click_crt_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <app.com.perfec10.helper.RoundedImageView
            android:id="@+id/riv_addfrnd_row"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            app:riv_border_width="1dp"
            app:riv_border_color="@color/view_color"
            android:scaleType="center"
            app:riv_corner_radius="15dp"
            app:riv_oval="false"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_name_addfrndrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:id="@+id/tv_email_addfrndrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@gmail.com"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></RelativeLayout>
        <ImageView
            android:id="@+id/iv_select_addfrndrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/unselect"
            android:layout_gravity="center" />
    </LinearLayout>
    <View
        android:id="@+id/view_crtgrp_row"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/view_color"
        android:layout_marginTop="@dimen/dp_10"/>
</LinearLayout>