<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/lgoinhome_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"
                android:layout_alignParentBottom="true">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/dp_2"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/dp_40">
                    <Button
                        android:id="@+id/btn_fb_loginhome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login With Facebook"
                        android:textColor="@color/white"
                        android:background="@color/fb_blue"
                        android:padding="@dimen/dp_15"
                        android:textAllCaps="false"
                        android:textAlignment="center"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_40">
                    <Button
                        android:id="@+id/btn_email_loginhome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Login With Email ID"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/dp_15"
                        android:textAlignment="center"/>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/ll_signup_loginhome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tv_newuser_loginhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New User?"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_signup_loginhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Sign up Here"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@mipmap/popup">


        <TextView
            android:id="@+id/tv_sw1_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add friends on Perfec10"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_20"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_subtext_dialoge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_20"
            android:text="You have Facebook friends who are using Perfec10. Connect with them now?"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_later_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May be Later"
            android:gravity="center"
            android:textSize="@dimen/sp_17"
            android:layout_weight="1"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/diff_blue"/>
        <TextView
            android:id="@+id/tv_yes_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes, Absolutely"
            android:gravity="center"
            android:textSize="@dimen/sp_17"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>

</RelativeLayout>