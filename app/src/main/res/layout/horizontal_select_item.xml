<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/dp_3">

    <RelativeLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10">

        <app.com.perfec10.helper.RoundedImageView
            android:id="@+id/iv_rounded"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:scaleType="center"
            app:riv_corner_radius="10dp"
            app:riv_border_width="@dimen/dp_1"
            app:riv_border_color="@color/view_color"
            app:riv_oval="false"
            android:layout_marginTop="@dimen/dp_10"/>

        <ImageView
            android:layout_gravity="end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/people_remove"
            android:id="@+id/imageView"
            android:layout_marginTop="-5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/iv_rounded"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_selct_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="6"
        android:textColor="@color/black"/>
</LinearLayout>