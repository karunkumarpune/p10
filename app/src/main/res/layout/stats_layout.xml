<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_back_statsinp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/drop_up"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sw12_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAG A PERSON"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"/>
            <EditText
                android:id="@+id/et_tag_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="Enter Friend's Name"
                android:textColorHint="@color/black"
                android:textSize="@dimen/sp_16"
                android:background="@android:color/transparent"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_taged_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/view_color"/>
            <LinearLayout
                android:id="@+id/ll_location_statsinp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tv_sw13_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOCATION"/>
                <TextView
                    android:id="@+id/tv_selectlocation_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/view_color"/>
            <LinearLayout
                android:id="@+id/ll_age_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_sw14_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AGE"/>
                <TextView
                    android:id="@+id/tv_selectage_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Age"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:drawableRight="@mipmap/drop_down"/>
                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_age_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />
            <LinearLayout
                android:id="@+id/ll_height_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_sw15_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HEIGHT"/>
                <TextView
                    android:id="@+id/tv_selectheight_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Height"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:drawableRight="@mipmap/drop_down"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_height_stats"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />
            <LinearLayout
                android:id="@+id/ll_weight_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_sw16_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT"/>
                <TextView
                    android:id="@+id/tv_selectweight_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Weight"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:drawableRight="@mipmap/drop_down"/>
                 </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_weight_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_sw17_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RACE"/>
                <EditText
                    android:id="@+id/et_race_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Race"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginBottom="-3dp"
                    android:background="@android:color/transparent"/>
                 </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@color/view_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"

                android:layout_marginBottom="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_sw18_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD A NOTE"/>
                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:background="@drawable/rectangle"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10">
                    <EditText
                        android:id="@+id/et_note_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Note"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginBottom="-3dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@color/view_color" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_tut_stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/screen2"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>
</RelativeLayout>