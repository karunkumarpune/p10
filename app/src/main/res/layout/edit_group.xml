<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#efefef"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sw1_newsub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/colorPrimary"
        android:text="Enter New Subject"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        android:drawableLeft="@mipmap/back"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20">
        <app.com.perfec10.helper.RoundedImageView
            android:id="@+id/riv_add_img_newsub"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:riv_border_width="@dimen/dp_1"
            app:riv_border_color="@color/view_color"
            android:src="@mipmap/add_image"
            android:scaleType="fitXY"
            app:riv_corner_radius="15dp"
            app:riv_oval="false"/>
        <EditText
            android:id="@+id/et_subject_newsub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Type group subject here.."
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_15"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_check_newsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/check"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="-30dp"/>
</LinearLayout>